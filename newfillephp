</head>
<style>
  /* Add some styling for the timetable */
  table {
    border-collapse: collapse;
  }
  td, th {
    border: 1px solid black;
    padding: 5px;
  }
  th {
    background-color: lightgray;
  }
  .highlight {
    background-color: yellow;
  }
</style>

<form id="timetable-form">
  <table id="timetable">
    <tr>
      <th>Time</th>
      <th>Monday</th>
      <th>Tuesday</th>
      <th>Wednesday</th>
      <th>Thursday</th>
      <th>Friday</th>
      <th></th>
    </tr>
    <tr>
      <td>9:00am</td>
      <td><input type="text" name="monday-9am"></td>
      <td><input type="text" name="tuesday-9am"></td>
      <td><input type="text" name="wednesday-9am"></td>
      <td><input type="text" name="thursday-9am"></td>
      <td><input type="text" name="friday-9am"></td>
      <td><button class="delete-button">Delete</button></td>
</form>    
    <script>
        table.appendChild(newRow);
        // Add event listeners for the delete buttons
        const deleteButtons = document.querySelectorAll(".delete-button");
        deleteButtons.forEach(function(deleteButton) {
        deleteButton.addEventListener("click", function() {
            // Delete the corresponding row when the delete button is clicked
            const row = deleteButton.parentElement.parentElement;
            row.remove();
        });
        });
    });
    // Add an event listener for the form submission to save the timetable data to local storage
    const form = document.querySelector("#timetable-form");
    form.addEventListener("submit", function(event) {
        event.preventDefault();
        // Get the form data
        const data = {};
        const formElements = form.elements;
        for (let i = 0; i < formElements.length; i++) {
        const element = formElements[i];
        if (element.name) {
            data[element.name] = element.value;
        }
        }
        // Save the data to local storage using the current user's username as the key
        localStorage.setItem(usrname, JSON.stringify(data));
    });
    </script>


</html>


<?php
session_start(); // Start a new session or resume an existing one
$usrname = $_SESSION['uid'];
?>

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
</head>

 <style>
  /* Add some styling for the timetable */
  table {
    border-collapse: collapse;
  }
  td, th {
    border: 1px solid black;
    padding: 5px;
  }
  th {
    background-color: lightgray;
  }
  .highlight {
    background-color: yellow;
  }
</style>

<form id="timetable-form">
  <table id="timetable">
    <tr>
      <th>Time</th>
      <th>Monday</th>
      <th>Tuesday</th>
      <th>Wednesday</th>
      <th>Thursday</th>
      <th>Friday</th>
      <th></th>
    </tr>
    <tr>
      <td>9:00am</td>
      <td><input type="text" name="monday-9am"></td>
      <td><input type="text" name="tuesday-9am"></td>
      <td><input type="text" name="wednesday-9am"></td>
      <td><input type="text" name="thursday-9am"></td>
      <td><input type="text" name="friday-9am"></td>
      <td><button class="delete-button">Delete</button></td>
    </tr>
    <!-- Add additional rows for different times and subjects -->
  </table>
  <br>
  <!-- Add a button to allow the user to add another time slot -->
  <button id="add-time-button">Add Time</button>
  <br><br>
  <input type="submit" value="Save">
</form>
<!-- Add a JavaScript function to handle form submission, highlight a specific time slot when hovered over, and delete rows when the delete button is clicked -->
<script>
  const form = document.querySelector("#timetable-form");
  form.addEventListener("submit", function(event) {
    event.preventDefault();
    // Add code here to save the form data (e.g., using local storage or an AJAX request)
  });
  // Add an event listener for the "Add Time" button to add a new row to the table
  const addTimeButton = document.querySelector("#add-time-button");
  addTimeButton.addEventListener("click", function() {
    // Add a new row to the table for the additional time slot
    const table = document.querySelector("#timetable");
    const newRow = document.createElement("tr");
    newRow.innerHTML = `
      <td><input type="text" name="time"></td>
      <td><input type="text" name="monday"></td>
      <td><input type="text" name="tuesday"></td>
      <td><input type="text" name="wednesday"></td>
      <td><input type="text" name="thursday"></td>
      <td><input type="text" name="friday"></td>
      <td><button class="delete-button">Delete</button></td>
    `;
    table.appendChild(newRow);
    // Add event listeners for the delete buttons
    const deleteButtons = document.querySelectorAll(".delete-button");
    deleteButtons.forEach(function(deleteButton) {
      deleteButton.addEventListener("click", function() {
        // Delete the corresponding row when the delete button is clicked
        const row = deleteButton.parentElement.parentElement;
        row.remove();
      });
    });
  });
</script>






</html>

